<section
  {% if section.settings.imageBg %}
    style="background-image: url('{{ section.settings.imageBg | image_url: width: 1600 }}');"
  {% endif %}
  class="container"
>
  <h1 style="color:red">{{ section.settings.title }}</h1>
  <div class="parent">
    <swiper-container>
   
 
    {%- for block in section.blocks -%}
      {% case block.type %}
        {% when 'slide' %}
          <swiper-slide>
            <div class="slide" {{ block.shopify_attributes }}>
              {{ block.settings.imageslide | image_url: width: 400, height:600 | image_tag: loading: 'lazy'}}
              <h4>{{ block.settings.titleImg }}</h4>

              </div>
            </swiper-slide>
      {% endcase %}
    {%- endfor -%}
    </swiper-container>
  </div>
  {% comment %}
    {% render 'card-product',
                  card_product: product,

    %}
  {% endcomment %}
  {% comment %} {{ shop.name   }} {% endcomment %}
</section>
<style>
  .container {
    text-align: center;
  }
  .parent {
  }
</style>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>

{% schema %}
{
  "name": "test",
  "tag": "section",
  "class": "test",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title"
    },
    {
      "type": "image_picker",
      "id": "imageBg",
      "label": "bg image"
    }
  ],
  "max_blocks": 5,
  "blocks": [
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "imageslide",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "titleImg",
          "label": "title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "test",
      "settings": {
        "title": "test"
      },
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
{% comment %} shopify theme dev --store pixelscodess {% endcomment %}
